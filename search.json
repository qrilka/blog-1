---
---
[
	{% for post in site.posts %}
		{
		  "title"      : "{{ post.title | escape }}",
		  "category"   : "{{ post.category }}",
		  "url"        : "{{ site.url }}{{ post.url }}",
		  "date"       : "{{ post.date }}",
		  "shortdate"  : "{{ post.date | date: '%B %d, %Y' | replace: 'January', 'январь' | replace: 'February', 'февраль' | replace: 'March', 'март' | replace: 'April', 'апрель' | replace: 'May', 'май' | replace: 'June', 'июнь' | replace: 'July', 'июль' | replace: 'August', 'август' | replace: 'September', 'сентябрь' | replace: 'October', 'октябрь' | replace: 'November', 'ноябрь' | replace: 'December', 'декабрь' }}"
		} {% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
]

